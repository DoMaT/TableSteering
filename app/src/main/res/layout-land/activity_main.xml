<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/background">
    <LinearLayout
        android:orientation="vertical"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:weightSum="5"
        >
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:weightSum="4"
        android:id="@+id/layout1"
        android:focusable="true">

        <Space
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="match_parent" />

        <com.example.mdomagal.myapplication.SquareImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height = "wrap_content"
            android:id="@+id/playButton"
            android:background="@mipmap/play2"
            android:scaleType="centerInside"  />

        <Space
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent" />

        <com.example.mdomagal.myapplication.SquareImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/settingsButton"
            android:background="@mipmap/settings1"
            android:scaleType="centerInside" />

        <Space
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent" />

        <com.example.mdomagal.myapplication.SquareImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height = "wrap_content"
            android:id="@+id/aboutButton"
            android:background="@mipmap/about"
            android:scaleType="centerInside"  />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:weightSum="4"
        android:id="@+id/layout2"
        android:focusable="true">

        <Space
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="match_parent" />

        <com.example.mdomagal.myapplication.SquareImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height = "wrap_content"
            android:id="@+id/levelButton"
            android:background="@mipmap/poziomica"
            android:scaleType="centerInside"  />

        <Space
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent" />

        <com.example.mdomagal.myapplication.SquareImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/infoButton"
            android:background="@mipmap/info"
            android:scaleType="centerInside" />

        <Space
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent" />

        <com.example.mdomagal.myapplication.SquareImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height = "wrap_content"
            android:id="@+id/exitButton"
            android:background="@mipmap/exit"
            android:scaleType="centerInside"  />

    </LinearLayout>
</LinearLayout>
</RelativeLayout>